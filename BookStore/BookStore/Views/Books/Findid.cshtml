@{
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<h1>Show ID : @ViewBag.id</h1>
<table align="center" border="1">
    <tr align="center">
        <td><b>ID</b></td>
        <td><b>ISBN-13</b></td>
        <td><b>ISBN-10</b></td>
        <td><b>Title</b></td>
        <td><b>Author</b></td>
        <td><b>Year</b></td>
        <td><b>Category</b></td>
        <td><b>Price</b></td>
        <td><b>Edit</b></td>
        <td><b>Delete</b></td>
    </tr>
    @for (int i = 0; i < 1; i++)
    {
        <tr align="center">
            <td>@ViewBag.id</td>
            <td>@ViewBag.isbn13</td>
            <td>@ViewBag.isbn10</td>
            <td>@ViewBag.title_</td>
            <td>@ViewBag.author</td>
            <td>@ViewBag.year</td>
            <td>@ViewBag.category</td>
            <td>@ViewBag.price</td>
            <td>
                @using (Html.BeginForm("Edit", "Books", new { id = @ViewBag.id[i], title = @ViewBag.title_[i], isbn13 = @ViewBag.isbn13[i], isbn10 = @ViewBag.isbn10[i], author = @ViewBag.author[i], year = @ViewBag.year[i], category = @ViewBag.category[i], price = @ViewBag.price[i] }))
            {
                <input type="image" src="https://cdn4.iconfinder.com/data/icons/meBaze-Freebies/512/edit-notes.png" id="edit" height="20" width="20" />
            }
        </td>
        <td>
            @using (Html.BeginForm("Delete", "Books", new { id = @ViewBag.id[i] }))
                {
                <input type="image" src="https://qph.ec.quoracdn.net/main-qimg-83c6de25ed91d13a4f09fb5f11ca8853?convert_to_webp=true" id="delete" height="20" width="20" />
            }
        </td>
    </tr>
    }

</table>