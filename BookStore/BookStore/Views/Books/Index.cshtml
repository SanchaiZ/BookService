@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Book";
}

@ViewBag.test
<h2>BookList</h2>

    <table>
        <tr>
            @using (Html.BeginForm("Index", "Books", FormMethod.Post))
            {
                <td>Price:  </td>
            <td>@Html.TextBox("start", "")  </td>
                <td>     to   @Html.TextBox("end", "") </td>
                <td><input type="submit" id="search" value="search" /></td>
            }
                <td>
                    &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp; 
                </td>
            @using (Html.BeginForm("Findid", "Books", FormMethod.Post))
            {
                <td>
                    Id:  @Html.TextBox("id", "")
                </td>
                <td>
                    <input type="submit" id="searchid" value="search" />
                </td>
                }
           
        </tr>
    </table>



<br><br>
    <table align="center" border="1">
        <tr align="center">
            <td><b>ID</b></td>
            <td><b>ISBN-13</b></td>
            <td><b>ISBN-10</b></td>
            <td><b>Title</b></td>
            <td><b>Author</b></td>
            <td><b>Year</b></td>
            <td><b>Category</b></td>
            <td><b>Price</b></td>
            <td><b>Edit</b></td>
            <td><b>Delete</b></td>
        </tr>
    @for (int i = 0; i < ViewBag.isbn13.Count; i++)
    {
        <tr align="center">
            <td>@ViewBag.id[i]</td>
            <td>@ViewBag.isbn13[i]</td>
            <td>@ViewBag.isbn10[i]</td>
            <td>@ViewBag.title_[i]</td>
            <td>@ViewBag.author[i]</td>
            <td>@ViewBag.year[i]</td>
            <td>@ViewBag.category[i]</td>
            <td>@ViewBag.price[i]</td>
            <td>@using (Html.BeginForm("Edit", "Books", new {id = @ViewBag.id[i] , title = @ViewBag.title_[i] ,isbn13 = @ViewBag.isbn13[i] , isbn10 = @ViewBag.isbn10[i] , author = @ViewBag.author[i] , year = @ViewBag.year[i] , category =  @ViewBag.category[i],price = @ViewBag.price[i] }))
            {
                <input type="image" src="https://cdn4.iconfinder.com/data/icons/meBaze-Freebies/512/edit-notes.png" id="edit" height="20" width="20" />
            }
            </td>
            <td>
                @using (Html.BeginForm("Delete", "Books", new { id = @ViewBag.id[i] }))
                {
                <input type="image" src="https://qph.ec.quoracdn.net/main-qimg-83c6de25ed91d13a4f09fb5f11ca8853?convert_to_webp=true" id="delete" height="20" width="20" />
            }
        </td>
        </tr>
    }
        
</table>